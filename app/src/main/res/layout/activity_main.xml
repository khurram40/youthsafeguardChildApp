<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="60dp"
        android:paddingRight="60dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="303dp"
                android:layout_height="38dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="39dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/usrusr" />

                <EditText
                    android:id="@+id/tv_ChildName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:hint="Child's Name"
                    android:inputType="text"
                    android:letterSpacing="0.1"
                    android:paddingLeft="5dp"
                    android:paddingTop="10dp"
                    android:textColor="#0A0A0A"
                    android:textColorHint="#9FA3A5"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="1dp"
                android:background="#4a5a71"></LinearLayout>


            <LinearLayout
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp">

               <com.hbb20.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="47dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:ccp_defaultNameCode="Pk" />


                <EditText
                    android:id="@+id/tv_MobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:hint="Parent's MobileNumber"
                    android:inputType="number"
                    android:letterSpacing="0.1"
                    android:paddingTop="10dp"
                    android:textColor="#0A0A0A"
                    android:textColorHint="#9FA3A5"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="1dp"
                android:background="#4a5a71" />


        </LinearLayout>










    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="60dp"
        android:paddingRight="60dp">

        <Button
            android:id="@+id/btn_SignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="60dp"
            android:background="@android:color/holo_orange_dark"
            android:gravity="center"
            android:letterSpacing="0.2"
            android:onClick="btn_SignUp_click"
            android:padding="15dp"
            android:text="Register Child"
            android:textColor="#0E0D0D"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="400dp"
        android:gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/child_orange" />
    </LinearLayout>
</RelativeLayout>
